@using OnlineShop.Db.Models
@model OrderViewModel

<div class="row">
	<div class="col-lg-3">
		<div class="my-4">
			@await Html.PartialAsync("LeftMenu")
		</div>
	</div>

	<div class="col-lg-9 my-4">
		<form method="post">
			<div class="my-4">
				<h4 class="bg-warning-subtle text-emphasis-warning">Заказ</h4>
				<table class="table">
					<tr>
						<th class="col-lg-3">Дата и время создания заказа:</th>
						<td class="col-lg-9">@Model.CreatedDate</td>
					</tr>
					<tr>
						<th>Адрес:</th>
						<td>@Model.Address</td>
					</tr>
					<tr>
						<th>Получатель:</th>
						<td>@Model.Name</td>
					</tr>
					<tr>
						<th>Телефон:</th>
						<td>@Model.Number</td>
					</tr>
					<tr>
						<th>Email:</th>
						<td>@Model.Email</td>
					</tr>
                    <tr>
                        <th>Email:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Комментарий:</th>
                        <td>@Model.Comment</td>
                    </tr>
					<tr>
						<th>Сумма заказа:</th>
						<td>@string.Format("{0:0.##}",Model.Cost)</td>
					</tr>
					<tr>
						<th>Статус заказа:</th>
                        <td>
                            <select asp-for="@Model.Status"
                                    asp-items="Html.GetEnumSelectList<OrderStatus>()"
                                    class="form-control">
                            </select>
                        </td>
					</tr>
				</table>
				<div>
                    <button class="btn btn-info" type="submit" asp-area="Admin" asp-controller="Order" asp-action="UpdateOrderStatus" asp-route-orderId="@Model.Id">Обновить статус</button>
                </div>			
		</form>
	</div>
</div>


  

