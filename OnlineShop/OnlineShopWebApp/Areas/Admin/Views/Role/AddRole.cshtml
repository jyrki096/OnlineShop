@model Role

<div class="row">
    <div class="col-lg-3">
        <div class="my-4">
            @await Html.PartialAsync("LeftMenu")
        </div>
    </div>

    <div class="col-lg-9 my-4">
        <form method="post">
            <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
            <div class="col-12 g-3">
                <h4 class="bg-warning-subtle text-emphasis-warning">Добавление роли</h4>
                <div class="col-6">
                    <label asp-for="Name">Название роли:</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Админ" />
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-info my-4" asp-area="Admin" asp-controller="Role" asp-action="AddRole">Сохранить</button>
                    <a class="btn btn-outline-danger" asp-area="Admin" asp-controller="Role" asp-action="GetRoles">Отмена</a>
                </div>
            </div>            
        </form>
    </div>
</div>
