@model List<UserViewModel>

<div class="row">
    <div class="col-lg-3">
        <div class="my-4">
            @await Html.PartialAsync("LeftMenu")
        </div>
    </div>

    <div class="col-lg-9 my-4">
        <h4 class="bg-warning-subtle text-emphasis-warning">Список пользователей</h4>
        <a class="btn btn-outline-info" asp-area="Admin" asp-controller="User" asp-action="CreateUser"><i class="bi bi-database-add"> Добавить пользователя</i></a>

        @if (Model is null || !Model.Any())
        {
            <div class="text-center my-xl-5">
                <h3 class="bg-warning-subtle text-emphasis-warning ">Список пользователей пуст</h3>
            </div>
        }
        else
        {
            <div class="my-4">          
                <table class="table table-striped table-hover">
                    <thead>
                        <th>Логин</th>
                        <th>Имя </th>
                        <th>Телефон</th>
                        <th />
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Login</td>
                                <td>@user.Name</td>
                                <td>@user.PhoneNumber</td>
                                <td><a asp-area="Admin" asp-controller="User" asp-action="GetUserDetails" asp-route-userId="@user.Id">Подробнее</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

