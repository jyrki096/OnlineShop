@model ChangeRoleViewModel

<div class="row">
    <div class="col-lg-3">
        <div class="my-4">
            @await Html.PartialAsync("LeftMenu")
        </div>
    </div>

    <div class="col-lg-9 my-4">
        <form method="post">
            <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
            <div class="col-12 g-3">
                <h4 class="bg-warning-subtle text-emphasis-warning">Выберите роль</h4>
                <input type="hidden" name="UserId" value="@Model.UserId" />

                <div class="col-9 my-3">
                    @foreach (var role in Model.Roles)
                    {
                        if (Model.UserRole == role.Name)
                        {
                            <input type="radio" id="roleChoice" name="roleId" value="@role.Id" checked  />

                        }
                        else
                        {
                            <input type="radio" id="roleChoice" name="roleId" value="@role.Id" />
                        }
                        <label for="roleChoice">@role.Name</label>
                    }
                </div>

                <div class="col-9 my-3">
                    <button class="btn btn-info" type="submit" asp-area="Admin" asp-controller="User" asp-action="ChangeRole">Сменить</button>
                    <a class="btn btn-danger" asp-area="Admin" asp-controller="User" asp-action="GetUserDetails" asp-route-userId="@Model.UserId">Отмена</a>
                </div>
        </form>
    </div>
</div>



