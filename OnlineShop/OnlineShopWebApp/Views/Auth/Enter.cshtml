@model Auth

<div class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1 class="fw-bold mb-0 fs-2">Вход</h1>
                <a type="button" class="btn-close" asp-controller="Home" asp-action="Index"></a>
            </div>

            <div class="modal-body p-5 pt-0">
                <form method="post">
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Login" type="email" class="form-control rounded-3" id="floatingInput" placeholder="chopin@example.com">
                        <label asp-for="Login">Логин</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control rounded-3" id="floatingPassword" placeholder="Пароль">
                        <label asp-for="Password">Пароль</label>
                    </div>

                    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit" asp-controller="Auth" asp-action="Enter">Войти</button>

                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="remember" name="IsRemember" value="true">
                        <label class="form-check-label" for="rememberMe">
                            Запомнить меня?
                        </label>
                    </div>

                    <h2 class="fs-5 mb-3 text-center">ИЛИ</h2>
                    <a class="w-100 mb-2 btn btn-lg rounded-3 btn-outline-primary" type="submit" asp-controller="Auth" asp-action="Register" asp-route-ReturnUrl="@Model.ReturnUrl">Зарегистрироваться</a>
                </form>
            </div>
        </div>
    </div>
</div>
