@model Register

<div class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5" tabindex="-1" role="dialog" id="modalRegister">
	<div class="modal-dialog" role="document">
		<div class="modal-content rounded-4 shadow">
			<div class="modal-header p-5 pb-4 border-bottom-0">
				<h1 class="fw-bold mb-0 fs-2">Регистрация</h1>
				<a type="button" class="btn-close" asp-controller="Home" asp-action="Index"></a>
			</div>

			<div class="modal-body p-5 pt-0">
				<form method="post" enctype="multipart/form-data">
					<div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
					<div class="form-floating mb-3">
						<input asp-for="Login" type="email" class="form-control rounded-3" id="floatingInput" placeholder="liszt@example.com">
						<label asp-for="Login">Email*</label>
					</div>

					<div class="form-floating mb-3">
						<input asp-for="Name" type="text" class="form-control rounded-3" id="floatingInput" placeholder="Ференц">
						<label asp-for="Name">Имя*</label>
					</div>

					<div class="form-floating mb-3">
						<input asp-for="PhoneNumber" type="text" class="form-control rounded-3" id="floatingInput" placeholder="79995556699">
						<label asp-for="PhoneNumber">Номер телефона*</label>
					</div>

					<div class="form-floating mb-3">
						<label name="upPhoto">Фото</label>
						<input type="file" class="form-control" name="UpPhoto" />
					</div>

					<div class="form-floating mb-3">
						<input asp-for="Password" type="password" class="form-control rounded-3" id="floatingPassword" placeholder="Пароль">
						<label asp-for="Password">Пароль*</label>
					</div>

					<div class="form-floating mb-3">
						<input asp-for="PasswordConfirmation" type="password" class="form-control rounded-3" id="floatingPassword" placeholder="Пароль">
						<label asp-for="PasswordConfirmation">Повторите пароль*</label>
					</div>

					<button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit" asp-controller="Auth" asp-action="Register" asp-route-ReturnUrl="@Model.ReturnUrl">Зарегистрироваться</button>
				</form>
			</div>
		</div>
	</div>
</div>

