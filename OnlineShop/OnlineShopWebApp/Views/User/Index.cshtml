@model UserViewModel

<div class="row">
    <div class="col-lg-12 my-4">
        <div class="col-12 my-4">
            <h3>Личные данные</h3>
            <table class="table">
                <tr>
                    <th>Фотография: </th>
                    <td> 
                        <img class="card-img-top rounded mx-auto d-block w-50 h-50 scale" align="left" src="@Model.Image" alt="Изображение" />                                            
                    </td>
                </tr>
                <tr>
                    <th>Имя:</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th class="col-lg-3">Логин:</th>
                    <td class="col-lg-9">@Model.Login</td>
                </tr>
                <tr>
                    <th>Телефон:</th>
                    <td>@Model.PhoneNumber</td>
                </tr>
            </table>
        </div>
        <div align="right">
            <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Действия</button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="UserOrders">Мои заказы</a>
                <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="EditUser">Редактировать данные</a>
                <a class="dropdown-item" asp-controller="User" asp-action="DeleteImage">Удалить аватар</a>
            </div>
        </div>
</div>



