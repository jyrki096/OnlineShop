@model ProductViewModel

<div class="col-lg-12">
	<div class="row my-4 d-flex">
		<div class="col-6">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.ImageLinks.Count; i++)
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item active">
                                <img src="@Model.ImageLinks[i]" class="d-block w-100" alt="Картинка товара">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="@Model.ImageLinks[i]" class="d-block w-100" alt="Картинка товара">
                            </div>
                        }
                    }                   
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
           
            <div class="btn-group d-flex align-items-end justify-content-around">
                <a class="btn btn-success" asp-controller="Basket" asp-action="Add" asp-route-productId="@Model.Id"><i class="bi bi-cart-plus"> Купить</i></a>
                <a class="btn btn-outline-danger" asp-controller="Favorite" asp-action="Add" asp-route-productId="@Model.Id"><i class="bi bi-heart"> Отложить</i></a>
                <a class="btn btn-outline-warning" asp-controller="Compare" asp-action="Add" asp-route-productId="@Model.Id"><i class="bi bi-bookmarks"> Сравнить</i></a>
                <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-left-circle"> На главную</i></a>
            </div>
		</div>

		<div class="col-5">
			<h3>@Model.Name</h3>
            <h5>Описание:</h5>
			<p>@Model.Description</p>
            <h5>Характеристики:</h5>
            <p class="textDescription">
                <b>Цвет:</b>&#8194;@Model.Characteristics.Color<br />
                <b>Полифония:</b>&#8194;@Model.Characteristics.Polyphony<br />
                <b>Тембры:</b>&#8194;@Model.Characteristics.Timbers<br />
                <b>Мощность:</b>&#8194;@Model.Characteristics.Power
            </p>
            <h5>Цена:</h5>
            <h4>@string.Format("{0:0.##}",Model.Cost) &#8381;</h4>			
		</div>
	</div>
</div>

