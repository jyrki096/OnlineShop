@model OrderViewModel

<div class="py-3 text-center">
    <h2>Форма оформления заказа</h2>
    <p class="lead">Пожалуйста заполните форму заказа. Обязательные поля для заполнения обозначены *</p>
</div>

<div class="d-flex justify-content-center">
    <form method="post">
        <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
        <div class="my-2">
            <label asp-for="Email">Email*</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="rachmaninoff@gmail.com" />
        </div>
        <div class="my-2">
            <label asp-for="Name">ФИО*</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Рахманинов Сергей Васильевич" />
        </div>

        <div class="my-2">
            <label asp-for="Number">Телефон*</label>
            <input asp-for="Number" type="tel" class="form-control" placeholder="+7 XXX-XXX-XX-XX" />
        </div>

        <div class="my-2">
            <label asp-for="Address">Адрес*</label>
            <input asp-for="Address" type="text" id="suggest" class="form-control" placeholder="г.Москва, ул. Декабристов дом 1" />
        </div>
        <div class="my-2">
            <label asp-for="DeliveryDate">Время доставки</label>
            <input asp-for="DeliveryDate" type="datetime-local" class="form-control"/>
        </div>
        <div class="my-2">
            <label asp-for="Comment">Комментарий</label>
            <textarea asp-for="Comment" name="Comment" class="form-control" placeholder="Ваш комментарий, пожелания к доставке"></textarea>
        </div>
        <div class="d-flex justify-content-between">
            <a class="btn btn-lg btn-outline-primary my-4" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-left-circle"> Продолжить покупки</i></a>
            <button class="btn btn-lg btn-success my-4" type="submit" asp-controller="Order" asp-action="Buy"><i class="bi bi-check-circle-fill"> Оформить заказ</i></button>
        </div>
    </form>
</div>
